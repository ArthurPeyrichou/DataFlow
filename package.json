{
    "name": "dataflow_project",
    "version": "1.0.0",
    "description": "Dataflow tool",
    "main": "",
    "engines": {
        "node": "12.13.x"
    },
    "scripts": {
        "generate:certificate": "openssl genrsa -out FlowBackend/keys/ssl-key.pem 4096 && openssl req -new -x509 -key FlowBackend/keys/ssl-key.pem -out FlowBackend/keys/ssl-cert.pem -days 365 -subj /CN=localhost",
        "generate:communicationKeys": "openssl genrsa -out FlowBackend/keys/rsa_4096_priv.pem 4096 && openssl rsa -pubout -in FlowBackend/keys/rsa_4096_priv.pem -out FlowBackend/keys/rsa_4096_pub.pem",
        "prerecup:components": "cd FlowBackend/components/ && git clone https://github.com/Rarioty/DataFlow-Components.git",
        "recup:components": "mv FlowBackend/components/DataFlow-Components/* FlowBackend/components/",
        "postrecup:components": "rm -rf FlowBackend/components/DataFlow-Components/",
        "preinstall:backend": "git clone https://github.com/ArthurPeyrichou/FlowBackend.git",
        "install:backend": "cd FlowBackend/ && pip install -r requirements.txt",
        "postinstall:backend": "npm run recup:components && npm run generate:certificate && npm run generate:communicationKeys",
        "install:frontend": "git clone https://github.com/ArthurPeyrichou/FlowFrontend.git",
        "postinstall:frontend": "cd FlowFrontend/ && npm install",
        "preinstall": "npm install npm-run-all",
        "install": "npm run install:backend && npm run install:frontend",
        "postinstall": "echo 'Installation finished successfully.'",
        "preupdate:backend": "cd FlowBackend/ && git pull",
        "update:backend": "cd FlowBackend/components/ && git pull",
        "postupdate:backend": "cd FlowBackend/ && pip install -r requirements.txt",
        "update:frontend": "cd FlowFrontend/ && git pull",
        "postupdate:frontend": "cd FlowFrontend/ && npm install",
        "update": "npm run update:backend && npm run update:frontend",
        "start:backend": "cd FlowBackend/ && py server.py &",
        "start:frontend": "cd FlowFrontend/ && npm run serve &",
        "start": "npm-run-all -p start:backend start:frontend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ArthurPeyrichou/Dataflow.git"
    },
    "author": "Arthur Peyrichou",
    "license": "MIT",
    "homepage": "https://github.com/ArthurPeyrichou/Dataflow#readme",
    "dependencies": {
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {}
}
